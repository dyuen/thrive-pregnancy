<!-- 
Layout of the I Need page
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NeedFragment" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/need_main_row"
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="50dp"
                android:padding="5dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_gotit"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="@string/INeed_Checklist_GotIt"
                android:textColor="#f47954"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_needit"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="@string/INeed_Checklist_NeedIt"
                android:textColor="#f47954"
                android:textSize="20sp" />
            
            <TextView
                android:id="@+id/txt_placeholder"
                android:layout_width="0dp"
                android:layout_weight="0.10"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal">
		    <ListView
		       android:id="@+id/lst_need"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		    </ListView>
		</LinearLayout>
</LinearLayout>