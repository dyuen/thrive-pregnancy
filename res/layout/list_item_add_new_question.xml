<?xml version="1.0" encoding="utf-8"?>
<!-- 
Layout of the "Add new" line in Care list Questions
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="ADD_NEW_QUESTION"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!-- Question area hidden whne entering a question -->
	<LinearLayout
	    android:id="@+id/new_question_request"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"
    	>
    	<!-- "Plus" image -->
    	<ImageButton
    		android:id="@+id/list_item_add_new"
	    	style="@style/listViewItemIconStyle"
    		android:src="@drawable/red_plus_icon"
    		android:contentDescription="@string/note"
    		android:adjustViewBounds="true"
	    	/>
    	<TextView
        	android:text="@string/add_new"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textAppearance="?android:attr/textAppearanceMedium" 
	    	/>
    </LinearLayout>
    <!-- Enter question area -->
    <RelativeLayout
	    android:id="@+id/new_question_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <EditText
            android:id="@+id/new_question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:hint="(enter question)"
            />            
    	<!-- "Plus" image -->
    	<ImageButton
    		android:id="@+id/new_question_save"
    		android:layout_toRightOf="@id/new_question_text"
	    	style="@style/listViewItemIconStyle"
    		android:src="@drawable/checkmark_icon"
    		android:adjustViewBounds="true"
	    	/>
       </RelativeLayout>
</LinearLayout>
