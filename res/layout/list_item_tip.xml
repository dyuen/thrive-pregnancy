<?xml version="1.0" encoding="utf-8"?>
<!-- 
Layout of a single TIP Event in the timeline list
The top level tag attribute is required in the Timeline list adapter
-->
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:tag="TIP" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	android:background="@color/light_light_grey"
    >
    <TableLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
    	android:shrinkColumns="0"
    	android:stretchColumns="2"
	    >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/timeline"
			android:padding="0dip"
            >
	    	<!-- "Week dot" icon on top of timeline -->
	    	<ImageView
	   	    	android:id="@+id/list_item_tip_timeline"
	        	android:src="@drawable/ic_timeline_dot"
	        	android:background="@android:color/transparent"
	       	 	android:layout_width="@dimen/timeline_icon_width"
			    android:layout_height="@dimen/timeline_icon_height"
	        	android:adjustViewBounds="true"
	        	android:contentDescription="@string/icon"
	        	android:paddingRight="@dimen/timeline_tipiconright_spacing"
	        	android:paddingLeft="@dimen/timeline_icon_left"
	        	style="@style/edit_button_style"
	        	
	        	/>   
	   		
	    	<!-- Week number -->
	    	<TextView
	        	android:id="@+id/list_item_tip_week"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:padding="@dimen/timeline_item_padding"
	        	
	        	style="@style/timeline_week_style"
	        	/>
	    	<!-- Week date range -->
	    	<TextView
	        	android:id="@+id/list_item_tip_range"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:padding="@dimen/timeline_item_padding"
	        	
	        	style="@style/timeline_date_style"
	        	/>
	   	</TableRow>
	</TableLayout>
	<TableLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
    	android:shrinkColumns="0"
    	android:stretchColumns="2"
    	android:background="@color/white"
	    >
		<TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/timeline"
			android:padding="0dip"
            android:gravity="center_vertical">
    		<!-- Tip icon on top of timeline -->
	   		<ImageView
	    		android:id="@+id/list_item_tip_timeline_2"
	      		android:src="@drawable/ic_tips"
	      		android:background="@android:color/transparent"
	        	android:layout_width="@dimen/timeline_icon_width"
			    android:layout_height="@dimen/timeline_icon_height"
			    android:paddingLeft="@dimen/timeline_icon_left"
	        	android:adjustViewBounds="true"
	        	android:contentDescription="@string/icon"
	        	android:paddingRight="@dimen/timeline_tipiconright_spacing"
	        	style="@style/edit_button_style"
	        	/>
	        <!-- Tip text -->
	        <TextView
	            android:id="@+id/list_item_tip_text"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:padding="@dimen/timeline_item_padding"
	            android:layout_span="2"
	            style="@style/timeline_tip_style"
	            />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/timeline"
			android:padding="0dip"
            >
	    	<TextView
	           	android:id="@+id/list_item_tip_divider"
	           	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:visibility="gone"	
	        	/>
	        <!-- Photo visible only if one is defined -->  
	       	<ImageView
	           	android:id="@+id/list_item_tip_photo"
	           	android:layout_width="match_parent"
	           	android:layout_height="wrap_content"
	           	android:adjustViewBounds="true"
	           	android:padding="@dimen/timeline_item_padding"
	           	android:layout_span="2"
	           	android:visibility="gone"	
	           	android:contentDescription="@string/photo"	   		
	        	/>
       	</TableRow>
       	<TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"            
            android:background="@color/light_light_grey"
			android:padding="0dip"
            >
	       	<ImageView
	           	android:id="@+id/list_item_bottom"
	           	android:layout_width="match_parent"
	           	android:layout_span="3"
		    	android:layout_height="@dimen/timeline_listitembottom_spacing"
		    	android:background="@drawable/timeline"
		    	android:contentDescription="@string/icon"
	        	/>
	   	</TableRow>
 	</TableLayout>
</TableLayout>