<?xml version="1.0" encoding="utf-8"?>
<!-- 
Layout of a single TIP Event in the timeline list
The top level attribute is required in the Timeline and Mycare list adapters
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="TIP" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >    
	<RelativeLayout
    	android:paddingTop="20dp"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:background="@drawable/timeline_background"
    	>    
    	<!-- "Week dot" icon on top of timeline -->
    	<ImageView
   	    	android:id="@+id/list_item_tip_timeline"
        	android:src="@drawable/timeline_week_con"
       	 	style="@style/listViewHeaderItemButtonStyle"
        	android:layout_alignParentTop="true"
        	android:layout_alignParentLeft="true"
        	android:adjustViewBounds="true"
        	/>
    	<!-- Week number and date range -->
    	<TextView
        	android:id="@+id/list_item_tip_date"
        	android:layout_toRightOf="@id/list_item_tip_timeline"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textAppearance="?android:attr/textAppearanceMedium" 
        	/>
    </RelativeLayout>
    <RelativeLayout
    	android:paddingTop="20dp"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:background="@drawable/timeline_background"
        >
   		<!-- Tip icon on top of timeline -->
   		<ImageView
    		android:id="@+id/list_item_tip_timeline_2"
      		android:src="@drawable/timeline_chat_icon"
        	style="@style/listViewHeaderItemButtonStyle"
        	android:layout_alignParentTop="true"
        	android:layout_alignParentLeft="true"
        	android:adjustViewBounds="true"
        	/>
        <!-- Tip text -->
        <TextView
            android:id="@+id/list_item_tip_text"
            android:layout_toRightOf="@id/list_item_tip_timeline_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            />
        <!-- Photo visible only if one is defined -->  
       	<ImageView
           	android:id="@+id/list_item_tip_photo"
           	android:layout_toRightOf="@id/list_item_tip_timeline_2"
           	android:layout_below="@id/list_item_tip_text"
           	android:layout_width="match_parent"
           	android:layout_height="wrap_content"
           	android:adjustViewBounds="true"
           	android:visibility="gone"			
        	/>
    </RelativeLayout>
</LinearLayout>
