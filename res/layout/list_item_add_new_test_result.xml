<?xml version="1.0" encoding="utf-8"?>
<!-- 
Layout of the "Add new" line in Care list Test Results
-->

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:tag="ADD_NEW_TEST_RESULT"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
    	android:shrinkColumns="0"
    	android:stretchColumns="2"
	    > 
	<TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
             <ImageView
		        android:src="@drawable/ic_questions"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		        android:paddingRight="@dimen/care_iconright_spacing"
		        android:adjustViewBounds="true"
		        android:contentDescription="@string/icon"
		        style="@style/edit_button_style"
		        android:visibility="invisible"/>
		    <!-- "Plus" image -->
		    <ImageButton
		    	android:id="@+id/list_item_add_new"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
		    	android:src="@drawable/ic_add"
		    	android:contentDescription="@string/note"
		    	android:adjustViewBounds="true"
		    	style="@style/edit_button_style"
		    	 android:padding="@dimen/care_item_padding"
		    	 
			    />
		    <TextView
		        android:text="@string/add_new"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    style="@style/mycare_addnew_style"
			     android:padding="@dimen/care_item_padding"
			    />
	</TableRow>
</TableLayout>
