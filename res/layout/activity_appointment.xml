<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center_horizontal" 
    android:background="@color/light_light_grey">
    
    <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" 
    >
	    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
		    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    >
		    
		    <EditText
		        android:id="@+id/appt_purpose"
		        android:hint="@string/Appt_Purpose"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/edit_input_style"
		        /> 
		        <requestFocus />
		    <EditText
		        android:id="@+id/appt_date"
		        android:hint="@string/Appt_Date"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/edit_input_style"
		        android:focusable="false"
		        android:inputType="date" /> 
		     <EditText
		        android:id="@+id/appt_time"
		        android:hint="@string/Appt_Time"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/edit_input_style"
		        android:focusable="false"
		        android:inputType="time" /> 
		    <EditText
		        android:id="@+id/appt_address"
		        android:hint="@string/Appt_Address"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/edit_input_style"
		        />
			<EditText
		        android:id="@+id/appt_doctor"
		        android:hint="@string/Appt_Doctor"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/edit_input_style" 
		        />
			<EditText
		        android:id="@+id/appt_notes"
		        android:hint="@string/Appt_Notes"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/edit_input_style" 
		        />	
			<TextView
		        android:id="@+id/appt_warning"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/edit_warning_style" 
		        android:padding="@dimen/activity_item_padding"
		        />
			<ImageButton
		        android:id="@+id/appt_delete"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right"
		        style="@style/edit_button_style" 
		        android:src="@drawable/ic_delete_selector"
		        android:contentDescription="@string/Appt_Delete"
		        android:padding="@dimen/activity_item_padding"
		        />
			<ImageView
		        android:id="@+id/appt_image"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:adjustViewBounds="true"
		        android:scaleType="fitCenter"
		        android:contentDescription="@string/Appt_Photo"
		        android:padding="@dimen/activity_item_padding"
		        />
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:gravity="center">
			   
				<ImageButton
			        android:id="@+id/appt_create"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/edit_button_style" 
			        android:src="@drawable/ic_camera_selector"
			        android:contentDescription="@string/Appt_Create"
			        />
				<TextView
			        android:id="@+id/appt_create_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="@dimen/edit_item_spacing"
			        android:text="@string/add_photo"
			        style="@style/edit_photo_style"
		        />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>