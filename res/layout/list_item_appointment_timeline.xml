<?xml version="1.0" encoding="utf-8"?>
<!-- 
Layout of a single APPOINTMENT Event in the timeline list
The top level tag attribute is required in the Timeline and Mycare list adapters
-->
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
	    android:tag="APPOINTMENT" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
    	android:shrinkColumns="0"
    	android:stretchColumns="1"
	    >
	    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/timeline"
			android:padding="0dip"
            android:gravity="center_vertical">
            
		    <!-- Appointment icon on top of timeline-->
		   	<ImageView
		   	    android:id="@+id/list_item_appt_timeline"
		   	    android:background="@android:color/transparent"
		    	android:src="@drawable/ic_appts"
		    	android:layout_width="@dimen/timeline_icon_width"
			    android:layout_height="@dimen/timeline_icon_height"
			    android:paddingLeft="@dimen/timeline_icon_left"
				android:paddingRight="@dimen/timeline_tipiconright_spacing"
		       	android:adjustViewBounds="true"
		       	android:contentDescription="@string/icon"
		       	style="@style/edit_button_style"
		    	/>
			 	<!-- Purpose -->
        	<TextView
	        	android:id="@+id/list_item_appt_purpose"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:padding="@dimen/timeline_item_padding"
	        	style="@style/timeline_appttitle_style" 
	        	/>   
	        		
	       <!--  Edit button -->
        	<ImageButton
        	    android:id="@+id/list_item_appt_edit"
	        	android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
        		android:src="@drawable/ic_pencil_selector"
        		android:contentDescription="@string/appt"
        		android:adjustViewBounds="true"
        		android:padding="@dimen/timeline_item_padding"
        		style="@style/edit_button_style"
	        	/>
        	<!-- Delete button -->
    	    <ImageButton
    	        android:id="@+id/list_item_appt_delete"
	        	android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
        		android:src="@drawable/ic_delete_selector"
        		android:contentDescription="@string/note"
        		android:adjustViewBounds="true"
        		android:padding="@dimen/timeline_item_padding"
        		style="@style/edit_button_style"
	        	/>
    	
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/timeline"
			android:padding="0dip"
            android:gravity="center_vertical">
        	<TextView
	           	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@android:color/transparent"
	        	/>
	        <!-- Date/time -->
	        <TextView
		        android:id="@+id/list_item_appt_time"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_span="3"
		        android:padding="@dimen/timeline_item_padding"
		        style="@style/timeline_apptdetails_style"
		        />
	    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/timeline"
			android:padding="0dip"
            android:gravity="center_vertical">
	        <TextView
	            android:id="@+id/list_item_appt_address_div"
	           	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@android:color/transparent"
	        	/>
	        <!-- Address -->
	        <TextView
		        android:id="@+id/list_item_appt_address"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_span="3"
		        android:padding="@dimen/timeline_item_padding"
		        style="@style/timeline_apptdetails_style"
		        />
	    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/timeline"
			android:padding="0dip"
            android:gravity="center_vertical">
	        <TextView
	            android:id="@+id/list_item_appt_doctor_div"
	           	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@android:color/transparent"
	        	/>
	        <!-- Doctor -->
	        <TextView
		        android:id="@+id/list_item_appt_doctor"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_span="3"
		        android:padding="@dimen/timeline_item_padding"
		        style="@style/timeline_apptdetails_style"
		        />
	   	</TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/timeline"
			android:padding="0dip"
            android:gravity="center_vertical">
	        <TextView
	            android:id="@+id/list_item_appt_notes_div"
	           	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@android:color/transparent"
	        	/>
	        <!-- Notes -->
	        <TextView
		        android:id="@+id/list_item_appt_notes"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_span="3"
		        android:padding="@dimen/timeline_item_padding"
		        style="@style/timeline_apptnotes_style"
		        />
	    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/timeline"
			android:padding="0dip"
            android:gravity="center_vertical">
	        <TextView
	           	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@android:color/transparent"
	        	/>
	        <!-- Photo -->  
	        <ImageView
	            android:id="@+id/list_item_appt_photo"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_span="3"
	            android:padding="@dimen/timeline_item_padding"
	            android:adjustViewBounds="true"	
	            android:contentDescription="@string/photo"		
	            />
	    </TableRow>
	    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            
            android:background="@color/light_light_grey"
			android:padding="0dip"
            >
	       	<ImageView
	           	android:id="@+id/list_item_bottom"
	           	android:layout_width="match_parent"
	           	android:layout_span="4"
		    	android:layout_height="@dimen/timeline_listitembottom_spacing"
		    	android:background="@drawable/timeline"
		    	android:contentDescription="@string/icon"
	        	/>
	       	</TableRow>
</TableLayout>
