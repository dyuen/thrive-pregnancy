<?xml version="1.0" encoding="utf-8"?>
<!-- 
Layout of a single DIARY_ENTRY Event in the timeline list
The top level attribute is required in the Timeline and Mycare list adapters
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="DIARY_ENTRY" 
    android:paddingTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/timeline_background"
    >    
    <!-- Diary icon on top of timeline -->
    <ImageView
   	    android:id="@+id/list_item_entry_timeline"
        android:src="@drawable/timeline_entry_icon"
        style="@style/listViewHeaderItemButtonStyle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        />
    <LinearLayout 
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_toRightOf="@id/list_item_entry_timeline"      
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            >
            <!-- Delete button -->
            <ImageButton
                android:id="@+id/list_item_entry_delete"
                style="@style/listViewItemIconStyle"
                android:src="@drawable/grey_circle_icon"
                android:contentDescription="@string/note"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                />
            <!--  Edit button -->
            <ImageButton
                android:id="@+id/list_item_entry_edit"
                style="@style/listViewItemIconStyle"
                android:src="@drawable/pencil_icon"
                android:contentDescription="@string/appt"
                android:layout_toLeftOf="@id/list_item_entry_delete"
                android:adjustViewBounds="true"
                />
            <!-- Date -->
            <TextView
                android:id="@+id/list_item_entry_date"
                android:layout_toLeftOf="@id/list_item_entry_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" 
                />
        </RelativeLayout>
        <!-- Appointment purpose -->
        <TextView
            android:id="@+id/list_item_entry_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            />
        <!-- Photo android:src="@drawable/baby" -->  
        <ImageView
            android:id="@+id/list_item_entry_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
			
            />
    </LinearLayout>
</RelativeLayout>
